{
  "manifest_version": 2,
  "description": "saves highlighted string",
  "name": "slantometer",
  "version": "0.1",
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
	  "default_icon": "./icon.png", 
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    "*.png"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-3.2.1.min.js",  "content.js"]
    }
  ]
}